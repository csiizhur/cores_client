/**ComboBox  样式start */
.combo-box-base:editable .text-field, .combo-box-base .arrow-button, .combo-box .list-cell {
    -fx-padding: 0px 6px 0px 6px;
}
.combo-box-base {
    -fx-background-color:white ;
    -fx-border-radius: 3px 3px 3px 3px;
    -fx-border-color:#b6b6b6;
	-fx-border-width:1;

}

.combo-box-base .arrow-button {
   -fx-background-color:white ;
    
}
.combo-box-base:editable {
	-fx-border-width:0;
}
.combo-box-base:editable .arrow-button {
   -fx-background-color:white ;
   -fx-border-radius: 0px 3px 3px 0px;
    -fx-border-color:#b6b6b6;
	-fx-border-width: 1 1 1 0;
}

.combo-box-base .arrow-button:hover{
	-fx-background-color:#dfdfdf;
}
/**ComboBox  样式end */