.root {
    -fx-focus-color: #F6F7F9;
    -fx-font-family: "System";
 
}

.centerPanel{
	-fx-border-color:black ;
	-fx-border-radius:5;
	-fx-border-width:1;
}
.selectPanel{
	-fx-border-color:black;
	-fx-border-width:1 0 1 0;
}
.overLinePanel{
	-fx-border-color:black;
	-fx-border-width:1 0 0 0;
}
.underLinePanel{
	-fx-border-color:black;
	-fx-border-width:0 0 1 0;
}
.statePanel{
	-fx-border-color:black;
	-fx-border-width:1;
}
.border{
	-fx-border-color:#c8ceda;
	-fx-border-width:1;
}
.border-right{
	-fx-border-color:#a8b2b2;
	-fx-border-width:0 1 0 0;
}
.border-bottom{
	-fx-border-color:#c8ceda;
	-fx-border-width:0 0 1 0;
}
.border-top{
	-fx-border-color:#c8ceda;
	-fx-border-width:1 0 0 0;
}
.border-top-dotted{
	-fx-border-color:#a5abb7;
	-fx-border-width:1 0 0 0;
	-fx-border-style: dotted;
}
.border-notop{
	-fx-border-color:#c8ceda;
	-fx-border-width:0 1 1 1;
}
.whiteLabel{
	-fx-background-color: white ;
}
/**ListView 样式 */
.list-view .list-cell:selected{
	-fx-background-color:#0092DC;
	-fx-text-fill: white;
}
.list-cell{
	-fx-background-color:white;
}
.list-view .list-cell:empty:hover{
	-fx-background-color:white;
}
.list-view .list-cell:hover{
	-fx-background-color:#cce3f4;
}
.list-view .list-cell:hover:selected{
	-fx-background-color:#0092DC;
}

/**TableView样式 start */
/* .table-cell {
	-fx-alignment: CENTER-RIGHT;
}表格文字居右*/
.table-view {
    -fx-base: azure;
    -fx-border-color:#a8b2b2;
	-fx-border-width:0 1 0 0;
}
.column-header{
	 -fx-border-color: azure;
	 -fx-border-width: 0px 0.0 30px 0 ;
}
.column-header-background{
	-fx-background-color:azure;
}
.column-header-background .column-header{
	-fx-background-color:#b6b6b6;
}
.table-row-cell:empty{
	-fx-background-color:#f2f2f2 ;
}
.table-row-cell:empty .table-cell{
	-fx-border-width:0.0px ;
}
.table-row-cell:selected{
	-fx-background-color:#0092DC;
	-fx-text-fill: white;
}

.table-cell:selected{
	-fx-text-fill: white;
}
/**TableView样式  end */

